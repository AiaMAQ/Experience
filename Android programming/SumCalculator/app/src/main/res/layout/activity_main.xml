<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".MainActivity">


    <TextView
            android:id="@+id/textView"
            android:textSize="30sp"
            android:layout_width="78dp"
            android:layout_height="51dp"
            android:text="@string/ans" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="23dp" app:layout_constraintBottom_toBottomOf="parent"
            android:layout_marginBottom="198dp"/>

    <TextView
            android:id="@+id/tv_result"
            android:textSize="30sp"
            android:layout_width="137dp"
            android:layout_height="53dp"
            android:text="@string/result" app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="136dp"
            android:layout_marginBottom="196dp"
            app:layout_constraintBottom_toBottomOf="parent"/>
    <Button
            android:text="@string/add"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/btn_add" app:layout_constraintStart_toStartOf="parent" android:layout_marginStart="23dp"
            android:layout_marginBottom="80dp" app:layout_constraintBottom_toTopOf="@+id/textView"/>
    <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:inputType="number"
            android:ems="10"
            android:id="@+id/ed2"
            android:hint="@string/num2" app:layout_constraintStart_toStartOf="parent" android:layout_marginStart="98dp"
            app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="100dp"
            android:layout_marginBottom="65dp" app:layout_constraintBottom_toTopOf="@+id/btn_add"
            android:autofillHints=""/>
    <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:inputType="number"
            android:ems="10"
            android:id="@+id/ed1"
            android:hint="@string/num1" app:layout_constraintTop_toTopOf="parent" android:layout_marginTop="112dp"
            app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="97dp" android:autofillHints=""/>


</android.support.constraint.ConstraintLayout>