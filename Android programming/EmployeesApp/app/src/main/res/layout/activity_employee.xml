<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".EmployeeActivity">

    <ImageView android:layout_width="192dp"
               android:layout_height="145dp"
               android:id="@+id/imageview"
               app:layout_constraintTop_toTopOf="parent"
               android:layout_marginTop="108dp"
               app:layout_constraintStart_toStartOf="parent"
               android:layout_marginStart="108dp"
               android:contentDescription="@string/imageview"/>
    <TextView
            android:layout_width="187dp"
            android:layout_height="28dp"
            android:id="@+id/nameTextView"
            android:layout_marginEnd="108dp"
            app:layout_constraintEnd_toEndOf="parent" app:layout_constraintTop_toTopOf="parent"
            android:layout_marginTop="324dp"/>

    <TextView
            android:layout_width="187dp"
            android:layout_height="28dp"
            android:id="@+id/titleTextView"
            android:layout_marginTop="36dp"
            app:layout_constraintTop_toBottomOf="@+id/nameTextView" android:layout_marginEnd="100dp"
            app:layout_constraintEnd_toEndOf="parent"/>

    <TextView
            android:layout_width="186dp"
            android:layout_height="27dp"
            android:id="@+id/emailTextView"
            android:layout_marginEnd="100dp"
            app:layout_constraintEnd_toEndOf="parent" app:layout_constraintTop_toTopOf="parent"
            android:layout_marginTop="456dp"/>

    <TextView
            android:layout_width="197dp"
            android:layout_height="32dp"
            android:id="@+id/phoneTextView"
            android:layout_marginEnd="104dp"
            app:layout_constraintEnd_toEndOf="parent" app:layout_constraintTop_toTopOf="parent"
            android:layout_marginTop="512dp"/>

    <TextView
            android:layout_width="201dp"
            android:layout_height="31dp"
            android:id="@+id/departmentTextView"
            app:layout_constraintEnd_toEndOf="parent" app:layout_constraintTop_toTopOf="parent"
            android:layout_marginTop="572dp" android:layout_marginEnd="100dp"/>


</android.support.constraint.ConstraintLayout>